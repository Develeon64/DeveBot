<?xml version="1.0" encoding="utf-8" ?>

<log4net debug="false">
	<appender name="ColoredConsole" type="log4net.Appender.ManagedColoredConsoleAppender">
		<mapping>
			<level value="DEBUG"/>
			<foreColor value="Blue"/>
			<backColor value="Black"/>
		</mapping>
		<mapping>
			<level value="INFO"/>
			<foreColor value="Green"/>
			<backColor value="Black"/>
		</mapping>
		<mapping>
			<level value="WARN"/>
			<foreColor value="Yellow"/>
			<backColor value="Black"/>
		</mapping>
		<mapping>
			<level value="ERROR"/>
			<foreColor value="Red"/>
			<backColor value="Black"/>
		</mapping>
		<mapping>
			<level value="FATAL"/>
			<foreColor value="White"/>
			<backColor value="Red"/>
		</mapping>
		<!--
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date{MM.dd.yyyy HH:mm:ss} | %-10.10logger | %-5.5level | %message%newline%exception" />
		</layout>
		-->
		<layout type="Develeon64.Bots.DeveBot.Utils.Logger.Formatter.ConsoleLayout"/>
	</appender>
	<appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
		<file value="Log/Test.log"/>
		<appendToFile value="true"/>
		<encoding value="UTF-8"/>
		<rollingStyle value="Date"/>
		<datePattern value="dd.MM.yyyy"/>
		<!--
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date{MM.dd.yyyy HH:mm:ss} | %-8.8logger | %-5.5level | %message%newline%exception" />
		</layout>
		-->
		<layout type="Develeon64.Bots.DeveBot.Utils.Logger.Formatter.FileLayout"/>
	</appender>

	<!--<renderer renderingClass="Develeon64.Bots.DeveBot.FruitRenderer" renderedClass="Develeon64.Bots.DeveBot.Fruit" />
	<renderer renderingClass="Develeon64.Bots.DeveBot.OrangeRenderer" renderedClass="Develeon64.Bots.DeveBot.Orange" />-->

	<root>
		<level value="DEBUG"/>
		<appender-ref ref="ColoredConsole"/>
		<appender-ref ref="RollingFile"/>
	</root>
</log4net>
